<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
	<!-- Añadir configuraciones de listener -->
    <lifecycle>
        <phase-listener>jsf.listener.JSFListener</phase-listener>
    </lifecycle>
	<!-- Configuración de Recursos properties -->
    <application>
    	<resource-bundle>
    		<base-name>recursos.textos</base-name>
    		<var>texto</var>
    	</resource-bundle>
    	<message-bundle>recursos.textos</message-bundle>
    	<locale-config>
    		<default-locale>es</default-locale>
    		<supported-locale>en</supported-locale>
    	</locale-config>
    </application>
</faces-config>